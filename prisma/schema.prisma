generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id       String   @id @default(uuid())
  fullName     String
  email    String   @unique
  password String
  supportLevel SupportLevelEnum?
  pronouns  PronounsEnum?
  createdAt DateTime @default(now())
  bio      String?
  profilePicture String?
  
}

enum SupportLevelEnum {
  Level_One
  Level_Two
  Level_Three
}

enum PronounsEnum {
  He_Him
  She_Her
  They_Them
  Other
  Prefer_Not_To_Say
}